{
  "name": "sit-ng2-starter",
  "version": "0.0.0",
  "description": "Angular2 starter kit for SIT MENA",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "npm run clean && webpack --env.server --env.development && concurrently \"npm run serve:client:dev\" \"npm run watch:server:dev\" \"npm run serve:server:dev\"",
    "serve:server:dev": "nodemon dist/server/server.js",
    "serve:server:prod": "node dist/server/server.js",
    "serve:client:dev": "webpack-dev-server --env.development --port 3001",
    "watch:server:dev": "webpack --env.server --env.development --watch",
    "build:prod": "npm run clean && webpack --env.production --progress",
    "clean": "rimraf dist",
    "test": "npm run lint && karma start",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --type-check \"src/**/*.ts\"",
    "prettify": "prettier --print-width 99 --tab-width 2 --single-quote --trailing-comma es5 --parser typescript --write \"src/**/*.ts\" && tslint -c ./tslint.json -p ./tsconfig.json --type-check --fix \"src/**/*.ts\" && git add $(git diff --name-only --cached)"
  },
  "pre-commit": "prettify",
  "author": "Faris Masad <f.masad@sit-mena.com>",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.1.2",
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/core": "^4.1.2",
    "@angular/forms": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/platform-server": "^4.1.2",
    "@angular/router": "^4.1.2",
    "@angularclass/hmr": "^1.2.2",
    "@angularclass/hmr-loader": "^3.0.2",
    "@nguniversal/express-engine": "^1.0.0-beta.1",
    "@ngx-translate/core": "^6.0.1",
    "@ngx-translate/http-loader": "0.0.3",
    "express": "^4.15.2",
    "intl": "^1.2.5",
    "ng2-validation": "^4.2.0",
    "rxjs": "^5.4.0",
    "xhr2": "^0.1.4",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.1.2",
    "@ngtools/webpack": "^1.4.0-rc.2",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^7.0.18",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "codelyzer": "^3.0.1",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.2",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.28.0",
    "jasmine-core": "^2.6.2",
    "karma": "^1.7.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-coverage": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^5.3.2",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
