{
  "name": "sit-ng2-starter",
  "version": "1.0.0",
  "description": "Angular2 starter kit for SIT MENA",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "build -- --env.server && PORT=3000 npm run serve",
    "serve": "node server/server.js",
    "serve:nossr": "NO_SSR=true npm run serve:dev",
    "serve:prod": "NODE_ENV=production npm run serve",
    "build": "npm run clean && webpack --bail --progress",
    "build:prod": "NODE_ENV=production npm run build",
    "build:prod:nossr": "NO_SSR=true npm run build:prod",
    "clean": "rimraf dist",
    "test": "npm run lint && karma start",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --type-check \"src/**/*.ts\"",
    "prettify": "prettier --print-width 99 --tab-width 2 --single-quote --trailing-comma es5 --parser typescript --write \"src/**/*.ts\" && tslint -c ./tslint.json -p ./tsconfig.json --type-check --fix \"src/**/*.ts\" && git add $(git diff --name-only --cached)"
  },
  "pre-commit": "prettify",
  "author": "Faris Masad <f.masad@sit-mena.com>",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.3.0",
    "@angular/common": "^4.3.0",
    "@angular/compiler": "^4.3.0",
    "@angular/core": "^4.3.0",
    "@angular/forms": "^4.3.0",
    "@angular/http": "^4.3.0",
    "@angular/platform-browser": "^4.3.0",
    "@angular/platform-browser-dynamic": "^4.3.0",
    "@angular/platform-server": "^4.3.0",
    "@angular/router": "^4.3.0",
    "@angularclass/hmr": "^2.1.3",
    "@angularclass/hmr-loader": "^3.0.3",
    "@nguniversal/express-engine": "^1.0.0-beta.2",
    "@ngx-translate/core": "^7.1.0",
    "@ngx-translate/http-loader": "0.1.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "humps": "^2.0.1",
    "intl": "^1.2.5",
    "ng2-validation": "^4.2.0",
    "rxjs": "^5.4.2",
    "xhr2": "^0.1.4",
    "zone.js": "^0.8.13"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.3.0",
    "@ngtools/webpack": "^1.5.1",
    "@types/express": "^4.0.36",
    "@types/jasmine": "^2.5.53",
    "@types/node": "^8.0.14",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.2.1",
    "codelyzer": "^3.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "^2.4.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.29.0",
    "jasmine-core": "^2.6.4",
    "karma": "^1.7.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-coverage": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "node-sass": "^4.5.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "script-ext-html-webpack-plugin": "^1.8.5",
    "to-string-loader": "^1.1.5",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.3.0",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-hot-server-middleware": "^0.1.0",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.6.0"
  }
}
