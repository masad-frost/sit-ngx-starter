{
  "name": "sit-ng2-starter",
  "version": "0.0.0",
  "description": "Angular2 starter kit for SIT MENA",
  "scripts": {
    "start": "npm run start:dev",
    "start:dev": "npm run clean && webpack --env.server --env.development && concurrently \"npm run serve:client:dev\" \"npm run watch:server:dev\" \"npm run serve:server:dev\"",
    "serve:server:dev": "nodemon dist/server/server.js",
    "serve:server:prod": "node dist/server/server.js",
    "serve:client:dev": "webpack-dev-server --env.development --port 3001",
    "watch:server:dev": "webpack --env.server --env.development --watch",
    "build:prod": "npm run clean && webpack -p --env.production --env.api_url=localhost:8000 --progress",
    "clean": "rimraf dist",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json --type-check ./src/**/*.ts"
  },
  "author": "Faris Masad <f.masad@sit-mena.com>",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.1.2",
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/core": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "@angular/platform-server": "^4.1.2",
    "@angular/router": "^4.1.2",
    "@nguniversal/express-engine": "^1.0.0-beta.1",
    "css-loader": "^0.28.2",
    "express": "^4.15.2",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "node-sass": "^4.5.3",
    "rxjs": "^5.4.0",
    "sass-loader": "^6.0.5",
    "to-string-loader": "^1.1.5",
    "xhr2": "^0.1.4",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^4.1.2",
    "@ngtools/webpack": "^1.3.1",
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.18",
    "codelyzer": "^3.0.1",
    "concurrently": "^3.4.0",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.11.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "tslint": "^5.3.2",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  }
}
